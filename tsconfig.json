{
  "compilerOptions": {
    "target": "es2018",
    "module": "CommonJS",
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",
    "src/*.ts",
    "index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}